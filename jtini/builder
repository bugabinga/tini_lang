#!/usr/bin/java --source 17

import static java.text.MessageFormat.format;

import java.util.spi.ToolProvider;
import java.util.Optional;

class builder
{
public static
void main ( final String[] command_line_arguments )
{
  print( "BUILDING JTINI." );
  final var java     = ToolProvider.findFirst( "javac" );
  final var compiler = java.get();
  print( "Java Compiler: {0}", compiler.name() );

  final var output_directory = "build/modules";
  final var source_directory = "source";
  final var main_module      = "command_line_interface";

  final String[] compile_command = {
    "-d",
    output_directory,
    "--release",
    "17",
    "-deprecation",
    "-encoding",
    "UTF-8",
    "-g",
    "--module",
    main_module,
    "--module-source-path",
    source_directory };
  final var exit_code = compiler.run( System.out, System.err, compile_command );
  print( "Exit Code: {0}", exit_code );
  print( "Compiled module `{0}` in `{1}` into `{2}`.", main_module, source_directory, output_directory );
  print( "BUILDING DONE!" );
}

private static
void print (
  final String message,
  final Object... arguments )
{
  System.out.println( format( message, arguments ) );
}
}